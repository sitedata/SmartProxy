{
  "name": "SmartProxy",
  "description": "SmartProxy is a Firefox/Chrome extension based on WebExtensions/Chrome Extensions.",
  "devDependencies": {
    "clean-webpack-plugin": "^1.0.0",
    "copy-webpack-plugin": "^4.6.0",
    "eslint": "^4.7.0",
    "terser-webpack-plugin": "^1.2.1",
    "ts-loader": "^5.3.2",
    "webpack": "^4.28.2",
    "webpack-cli": "^3.1.2"
  },
  "scripts": {
    "lint": "eslint ./src",
    "build": "webpack --env.browser=chrome",
    "build-ff": "webpack --env.browser=firefox",
    "build-ff-mobile": "webpack --env.browser=firefox-mobile",
    "build-ch": "webpack --env.browser=chrome",
    "build-ff-unlisted": "webpack --env.browser=firefox-unlisted",
    "build-ff:watch": "webpack --watch --env.browser=firefox",
    "build-ff-mobile:watch": "webpack --watch --env.browser=firefox-mobile",
    "build-ch:watch": "webpack --watch --env.browser=chrome",
    "test": "npm run lint"
  },
  "license": "GPL-3.0",
  "dependencies": {
    "tsc": "^1.20150623.0",
    "typescript": "^3.9.5",
    "web-ext-types": "^3.0.0"
  }
}